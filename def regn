
def rgen(tomato,potato,lemon,carrot,cucumber):
    print("grocery: 30july,2021")
    print("product     quantity        price")
    print("tomato         1 kg           ",tomato)
    print("potato         5 kg           ",potato)
    print("lemon          3 kg           ",lemon)
    print("carrot         2 kg           ",carrot)
    print("cucumber       2 kg           ",cucumber)
    add=tomato+potato+lemon+carrot+cucumber
    print('total')
    print(add)
def main():
    tomato=int(input("enter product name and price"))
    potato = int(input("enter product name and price"))
    lemon = int(input("enter product name and price"))
    carrot = int(input("enter product name and price"))
    cucumber = int(input("enter product name and price"))
    rgen(tomato,potato,lemon,carrot,cucumber)
if __name__ == "__main__":
        main()
        
        
        
        
